.main_chat

    .main_chat__main-header


        .main_chat__main-header__left-box

            %h2.main_chat__main-header__left-box__current-group
                a
                %ul.main_chat__main-header__left-box__current-group__member-list
                    member : 
                    %li.main_chat__main-header__left-box__current-group__member-list__member 
                        - @group.users.each do |t|
                            = t.name

        .main_chat__main-header__edit-btn
            = link_to 'Edit', edit_group_path(@group), class: "edit-group"
            -# =link_to 'Edit', edit_group_path(@group)
            -# = link_to "Edit", edit_group_path(params[:group_id]), method: :get

    .main_chat__messages
        = render @messages

        .main_chat__messages__message

            .main_chat__messages__message__upper-info  

                %p.main_chat__messages__message__upper-info__talker
                    taniguchi
                %p.main_chat__messages__message__upper-info__date
                    2020-03-10 12:34:56
            %p.main_chat__messages__message__text
                hello world
                

    .main_chat__type-message
        = form_for [@group, @message] do |f|
            .input-box
                = f.text_field :content, placeholder: 'type a message',class:'input-box-text'
                = f.label :image, class: 'image' do
                    = icon('fas', 'image', class: 'icon')
                    = f.file_field :image, class: 'hidden'
            = f.submit 'send', class: "btn"